<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash Theme -->
    <style name="Theme.QuizApp.Splash" parent="Theme.QuizApp.Splash.Dark"/>
    <!-- Base theme -->
    <style name="Theme.QuizApp" parent="Theme.QuizApp.Dark"/>
    <!-- Base BottomSheetDialogTheme -->
    <style name="Theme.QuizApp.BottomSheetDialog" parent="Theme.QuizApp.BottomSheetDialog.Dark"/>
    <!-- Base DialogFragmentTheme -->
    <style name="Theme.QuizApp.DialogFragment" parent="Theme.QuizApp.DialogFragment.Dark"/>
    <!-- Base DialogFragmentLoadingTheme -->
    <style name="Theme.QuizApp.DialogFragment.Loading" parent="Theme.QuizApp.DialogFragment.Loading.Dark"/>


    <!-- Light Splash Theme -->
    <style name="Theme.QuizApp.Splash.Dark" parent="Theme.QuizApp.Splash.Light">
        <item name="windowSplashScreenBackground">@color/hfuDarkGreen</item>
    </style>



    <!-- Dark Base theme -->
    <style name="Theme.QuizApp.Dark" parent="Theme.QuizApp.Light">
        <!-- Colors -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkColorPrimaryVariant</item>

        <item name="colorOnPrimary">@color/darkColorOnPrimary</item>

        <item name="colorSecondary">@color/darkColorSecondary</item>
        <item name="colorSecondaryVariant">@color/darkColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/darkColorOnSecondary</item>

        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="android:colorBackground">@color/darkBackgroundColor</item>
        <item name="colorOnBackground">@color/darkBackgroundColor</item>

        <!--        <item name="colorOnSurface">@color/white</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorControlActivated">@color/darkColorControlActivated</item>
        <item name="colorControlNormal">@color/darkColorControlNormal</item>


        <!-- Text Colors -->
        <item name="defaultTextColor">@color/darkDefaultTextColor</item>
        <item name="dominantTextColor">@color/darkDominantTextColor</item>
        <item name="invertedDefaultTextColor">@color/lightDefaultTextColor</item>
        <item name="invertedDominantTextColor">@color/lightDominantTextColor</item>
        <item name="headingTextColor">@color/white</item>
    </style>



    <!-- Dark BottomSheetDialogTheme -->
    <style name= "Theme.QuizApp.BottomSheetDialog.Dark"  parent="@style/Theme.QuizApp.BottomSheetDialog.Light">
        <!-- Colors -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/darkColorOnPrimary</item>

        <item name="colorSecondary">@color/darkColorSecondary</item>
        <item name="colorSecondaryVariant">@color/darkColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/darkColorOnSecondary</item>

        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="android:colorBackground">@color/darkBackgroundColor</item>
        <!--        <item name="colorOnSurface">@color/white</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorControlActivated">@color/darkColorControlActivated</item>
        <item name="colorControlNormal">@color/darkColorControlNormal</item>


        <!-- Text Colors -->
        <item name="defaultTextColor">@color/darkDefaultTextColor</item>
        <item name="dominantTextColor">@color/darkDominantTextColor</item>
        <item name="invertedDefaultTextColor">@color/lightDefaultTextColor</item>
        <item name="invertedDominantTextColor">@color/lightDominantTextColor</item>

    </style>



    <!-- Dark DialogFragmentTheme -->
    <style name="Theme.QuizApp.DialogFragment.Dark" parent="Theme.QuizApp.DialogFragment.Light">
        <!-- Colors -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/darkColorOnPrimary</item>

        <item name="colorSecondary">@color/darkColorSecondary</item>
        <item name="colorSecondaryVariant">@color/darkColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/darkColorOnSecondary</item>

        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="android:colorBackground">@color/darkBackgroundColor</item>
        <!--        <item name="colorOnSurface">@color/white</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorControlActivated">@color/darkColorControlActivated</item>
        <item name="colorControlNormal">@color/darkColorControlNormal</item>


        <!-- Text Colors -->
        <item name="defaultTextColor">@color/darkDefaultTextColor</item>
        <item name="dominantTextColor">@color/darkDominantTextColor</item>
        <item name="invertedDefaultTextColor">@color/lightDefaultTextColor</item>
        <item name="invertedDominantTextColor">@color/lightDominantTextColor</item>

    </style>



    <!-- Light DialogFragmentLoadingTheme. -->
    <style name="Theme.QuizApp.DialogFragment.Loading.Dark" parent="Theme.QuizApp.DialogFragment.Dark">
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowMinWidthMajor">85%</item>
    </style>
</resources>