<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:transitionGroup="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appBarLayout"
                android:backgroundTint="?android:colorBackground"
                app:liftOnScroll="true"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/topLayout"
                    android:elevation="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingBottom="@dimen/grid_3">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/btnBack"
                        android:background="?attr/actionBarItemBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/ic_cross"
                        android:padding="6dp"
                        android:layout_marginVertical="@dimen/grid_3"
                        android:layout_marginStart="@dimen/backButtonMargin" />

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/pageTitle"
                        style="@style/Style.QuizApp.Heading.TextAppearance"
                        android:textColor="?headingTextColor"
                        tools:text="@string/create"
                        app:layout_constraintTop_toTopOf="@+id/btnBack"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/btnBack" />

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/pageTitleSub"
                        android:text="@string/courseOfStudies"
                        android:layout_marginTop="@dimen/grid_1"
                        android:gravity="center"
                        android:textColor="?dominantTextColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/pageTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/tvSave"
                        android:text="@string/done"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?colorPrimary"
                        android:layout_marginEnd="@dimen/grid_6"
                        app:layout_constraintTop_toTopOf="@+id/btnBack"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/btnBack" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="130dp"
                android:clipToPadding="false"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:paddingTop="@dimen/grid_4">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingHorizontal="@dimen/grid_6"
                        android:paddingTop="@dimen/grid_8"
                        android:paddingBottom="@dimen/grid_2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <com.example.quizapp.view.customimplementations.ItemBottomTextDropDownLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/abbreviationCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:icon="@drawable/ic_title"
                            app:title="@string/abbreviation"
                            app:dropDownIcon="@drawable/ic_arrow_down"
                            tools:text="WIB"
                            android:background="@drawable/ripple_round_corners_10_dp"
                            android:backgroundTint="?colorOnPrimary" />

                    <com.example.quizapp.view.customimplementations.ItemBottomTextDropDownLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/abbreviationCard"
                            app:icon="@drawable/ic_course_of_studies"
                            app:title="@string/name"
                            app:dropDownIcon="@drawable/ic_arrow_down"
                            tools:text="Wirtschaftsinformatik"
                            android:layout_marginTop="@dimen/grid_6"
                            android:background="@drawable/ripple_round_corners_10_dp"
                            android:backgroundTint="?colorOnPrimary"/>

                    <com.example.quizapp.view.customimplementations.ItemBottomTextDropDownLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/degreeCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nameCard"
                            app:icon="@drawable/ic_certificate"
                            app:iconPadding="8dp"
                            app:title="@string/degree"
                            app:dropDownIcon="@drawable/ic_arrow_down"
                            tools:text="Bachelor"
                            android:layout_marginTop="@dimen/grid_6"
                            android:background="@drawable/ripple_round_corners_10_dp"
                            android:backgroundTint="?colorOnPrimary" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_6"
                            android:minHeight="60dp"
                            android:background="@drawable/background_round_corners_10dp"
                            android:backgroundTint="?colorOnPrimary"
                            app:layout_constraintTop_toBottomOf="@+id/degreeCard"
                            android:id="@+id/facultyCard">

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/facultyCardHeader"
                                app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:srcCompat="@drawable/ic_faculty"
                                    android:layout_marginStart="@dimen/grid_1"
                                    android:layout_marginTop="10dp"
                                    android:padding="10dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:id="@+id/facultyIcon" />

                            <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:id="@+id/facultyText"
                                    android:text="@string/faculties"
                                    android:layout_marginStart="@dimen/grid_2"
                                    android:textColor="?defaultTextColor"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical"
                                    app:autoSizeMaxTextSize="15.5sp"
                                    app:autoSizeMinTextSize="8sp"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeStepGranularity="0.25sp"
                                    android:lines="1"
                                    app:layout_constraintBottom_toBottomOf="@+id/facultyIcon"
                                    app:layout_constraintTop_toTopOf="@+id/facultyIcon"
                                    app:layout_constraintStart_toEndOf="@+id/facultyIcon"
                                    app:layout_constraintEnd_toStartOf="@+id/btnClearFaculties" />

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/btnClearFaculties"
                                    android:layout_marginEnd="@dimen/grid_1"
                                    android:padding="5dp"
                                    app:layout_constraintTop_toTopOf="@+id/facultyText"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:srcCompat="@drawable/ic_clear_all"
                                    app:layout_constraintBottom_toBottomOf="@+id/facultyText" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintHeight_max="300dp"
                                android:overScrollMode="never"
                                android:id="@+id/rvFaculty"
                                tools:listitem="@layout/rvi_faculty_choice"
                                tools:itemCount="2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/facultyCardHeader"
                                app:layout_constraintBottom_toTopOf="@id/btnAddFaculty"
                                android:clipToPadding="false"
                                android:layout_marginBottom="@dimen/grid_4"
                                android:layout_marginTop="-12dp"
                                android:paddingHorizontal="@dimen/grid_2_5" />

                        <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:text="@string/add"
                                android:id="@+id/btnAddFaculty"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/hfuDarkGreen"
                                android:background="@drawable/ripple_dashed_corners_15dp"
                                app:layout_constraintTop_toBottomOf="@id/rvFaculty"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginHorizontal="@dimen/grid_4"
                                android:layout_marginBottom="@dimen/grid_4"
                                android:elevation="1dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/btnSave"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ripple_round_corners_15_dp"
            android:backgroundTint="?colorPrimary"
            android:layout_margin="@dimen/grid_6"
            android:layout_gravity="bottom"
            android:text="@string/save"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>