<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:transitionName="@string/questionClickedTransitionName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/defaultBackgroundCardCornerRadius">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/quizTopLayoutHeight"
                android:id="@+id/header"
                android:background="@color/white"
                android:elevation="@dimen/defaultElevation"
                app:layout_constraintTop_toTopOf="parent" />

        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/rvBackground"
                android:layout_marginHorizontal="@dimen/grid_1"
                android:background="?android:colorBackground"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/tvQuestionType"
                android:elevation="@dimen/defaultElevation"
                android:text="@string/multipleChoice"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/grid_2"
                app:layout_constraintTop_toTopOf="@+id/btnShowSolution"
                app:layout_constraintEnd_toStartOf="@+id/btnShowSolution"
                app:layout_constraintBottom_toBottomOf="@+id/btnShowSolution" />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/ivQuestionType"
                android:elevation="@dimen/defaultElevation"
                android:padding="7.5dp"
                app:srcCompat="@drawable/ic_check_circle"
                app:layout_constraintEnd_toStartOf="@+id/tvQuestionType"
                app:layout_constraintBottom_toBottomOf="@+id/tvQuestionType"
                app:layout_constraintTop_toTopOf="@+id/tvQuestionType" />

        <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewPager"
                android:elevation="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btnBack"
                android:background="?attr/actionBarItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_arrow_back"
                android:padding="6dp"
                android:elevation="10dp"
                android:layout_marginStart="@dimen/grid_1_5"
                android:layout_marginTop="@dimen/grid_3" />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btnShowSolution"
                android:backgroundTint="?colorControlActivated"
                app:srcCompat="@drawable/ic_question_mark"
                android:padding="6dp"
                android:elevation="10dp"
                android:layout_marginEnd="@dimen/grid_1_5"
                android:layout_marginTop="@dimen/grid_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                app:cardCornerRadius="45dp"
                android:layout_marginHorizontal="@dimen/grid_3"
                app:layout_constraintBottom_toBottomOf="@+id/header"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="@dimen/grid_1">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/btnPreviousQuestion"
                        app:srcCompat="@drawable/ic_arrow_left"
                        android:elevation="1dp"
                        android:background="?attr/actionBarItemBackground"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/grid_2" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/btnNextQuestion"
                        app:srcCompat="@drawable/ic_arrow_right"
                        android:elevation="1dp"
                        android:background="?attr/actionBarItemBackground"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/grid_2" />

                <ProgressBar
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:id="@+id/progressIndicator"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/horizontal_indicator_progress_bar"
                        android:max="100"
                        tools:progress="5"
                        android:indeterminate="false"
                        android:indeterminateOnly="false"
                        android:layout_marginHorizontal="@dimen/grid_2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btnPreviousQuestion"
                        app:layout_constraintEnd_toStartOf="@+id/btnNextQuestion" />

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvProgress"
                        tools:text="1 / 20"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/btnCheckResults"
                app:cardBackgroundColor="?colorPrimary"
                app:cardCornerRadius="45dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:cardElevation="5dp"
                android:layout_marginBottom="@dimen/grid_6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/checkResults"
                    android:textStyle="bold"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white" />
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
