<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/background_round_corners_top_15dp"
        android:backgroundTint="?colorOnPrimary"
        android:paddingTop="@dimen/grid_4">
    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/tvTitle"
            android:text="@string/facultySelection"
            android:background="@drawable/background_round_corners_10dp"
            android:backgroundTint="@color/transparent"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/grid_3"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="0.25sp"
            android:textStyle="bold"
            android:fontFamily="@font/work_sans_regular"
            android:lines="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/grid_3" />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_2"
            android:paddingHorizontal="@dimen/grid_2"
            android:id="@+id/rv"
            tools:listitem="@layout/rvi_faculty"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnConfirm" />


    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/btnConfirm"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="?colorPrimary"
            android:text="Confirm"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/work_sans_medium"
            android:textColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>