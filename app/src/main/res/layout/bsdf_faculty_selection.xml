<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/background_round_corners_top_15dp"
        android:backgroundTint="?colorOnPrimary"
        android:paddingTop="@dimen/grid_4">

    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/tvTitle"
            android:text="@string/facultySelection"
            android:background="@drawable/background_round_corners_10dp"
            android:backgroundTint="@color/transparent"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/grid_3"
            app:autoSizeMaxTextSize="19sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="0.25sp"
            android:textStyle="bold"
            android:fontFamily="@font/work_sans_regular"
            android:lines="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/grid_3" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/searchBarHeight"
            android:id="@+id/clSearchBar"
            android:elevation="2dp"
            android:background="@drawable/background_round_corners_10dp"
            android:backgroundTint="?android:colorBackground"
            android:layout_marginHorizontal="@dimen/grid_4"
            android:layout_marginTop="@dimen/grid_4"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btnSearch"
                android:background="?attr/actionBarItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_search"
                android:padding="7.5dp"
                android:layout_marginStart="@dimen/grid_1_5" />

        <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/etSearchQuery"
                android:hint="@string/searchForFaculties"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="@dimen/grid_1"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/btnSearch"
                app:layout_constraintBottom_toBottomOf="@+id/btnSearch"
                app:layout_constraintStart_toEndOf="@+id/btnSearch"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="@dimen/grid_2"
            android:paddingTop="@dimen/grid_2"
            android:clipToPadding="false"
            android:id="@+id/rv"
            tools:listitem="@layout/rvi_faculty"
            app:layout_constraintTop_toBottomOf="@id/clSearchBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnConfirm" />

    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottomWideButtonHeight"
            android:id="@+id/btnConfirm"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="?colorPrimary"
            android:text="Confirm"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/work_sans_medium"
            android:textColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>