<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_round_corners_top_15dp"
        android:backgroundTint="?colorOnPrimary">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/appBarLayout"
            android:background="?colorOnPrimary"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/rv">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnBack"
                    android:background="?attr/actionBarItemBackground"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_arrow_back"
                    android:padding="6dp"
                    android:layout_marginTop="@dimen/grid_3"
                    android:layout_marginStart="@dimen/grid_1_5" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnMoreOptions"
                    android:src="@drawable/ic_more"
                    app:backgroundTint="?colorControlActivated"
                    android:padding="6dp"
                    android:elevation="10dp"
                    android:layout_marginEnd="@dimen/grid_1_5"
                    android:layout_marginTop="@dimen/grid_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnQuestionType"
                    app:srcCompat="@drawable/ic_radio_button"
                    android:layout_marginEnd="@dimen/grid_2"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="?android:colorBackground"
                    android:padding="@dimen/grid_2"
                    android:scaleX="0"
                    android:scaleY="0"
                    tools:scaleX="1"
                    tools:scaleY="1"
                    app:layout_constraintTop_toTopOf="@+id/btnMoreOptions"
                    app:layout_constraintEnd_toStartOf="@+id/btnMoreOptions"
                    app:layout_constraintBottom_toBottomOf="@+id/btnMoreOptions" />

            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/btnBack"
                    android:maxHeight="300dp"
                    android:minHeight="200dp"
                    android:background="@drawable/background_round_corners_15dp"
                    android:backgroundTint="?android:colorBackground"
                    android:layout_marginHorizontal="@dimen/grid_4"
                    android:id="@+id/etQuestion"
                    android:hint="@string/clickToWriteYourQuestion"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/grid_3"
                    android:paddingTop="@dimen/grid_3"
                    android:paddingBottom="@dimen/grid_6"
                    android:layout_marginTop="@dimen/grid_3"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeStepGranularity="0.25sp" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnAddQuestion"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="?colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/etQuestion"
                    app:layout_constraintBottom_toBottomOf="@id/etQuestion"
                    app:layout_constraintStart_toStartOf="@id/etQuestion"
                    app:layout_constraintEnd_toEndOf="@id/etQuestion"
                    app:srcCompat="@drawable/ic_add"
                    app:tint="@color/white"
                    android:padding="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/grid_1"
            android:id="@+id/rv"
            tools:listitem="@layout/rvi_answer_quiz"
            android:clipToPadding="false"
            android:paddingBottom="100dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottomWideButtonHeight"
            android:elevation="10dp"
            android:id="@+id/btnSave"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="?colorPrimary"
            android:layout_gravity="bottom"
            android:text="@string/saveQuestion"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/work_sans_medium"
            android:textColor="@color/white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>