<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:transitionName="@string/questionClickedTransitionName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/defaultBackgroundCardCornerRadius">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btnBack"
                android:background="?attr/actionBarItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_arrow_back"
                android:padding="6dp"
                android:elevation="10dp"
                android:layout_marginStart="@dimen/grid_1_5"
                android:layout_marginTop="@dimen/grid_3" />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btnShowSolution"
                android:backgroundTint="?colorControlActivated"
                app:srcCompat="@drawable/ic_question_mark"
                android:padding="6dp"
                android:elevation="10dp"
                android:layout_marginEnd="@dimen/grid_1_5"
                android:layout_marginTop="@dimen/grid_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:progress="60"
                android:id="@+id/answeredQuestionsProgress"
                android:background="@color/white"
                android:progressTint="?colorAccent"
                android:layout_marginHorizontal="@dimen/grid_8"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/horizontal_indicator_progress_bar"
                app:layout_constraintTop_toTopOf="@+id/btnBack"
                app:layout_constraintBottom_toBottomOf="@+id/btnBack"
                app:layout_constraintStart_toEndOf="@+id/btnBack"
                app:layout_constraintEnd_toStartOf="@+id/btnShowSolution" />

        <com.google.android.material.tabs.TabLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/tabLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                android:background="@color/transparent"
                app:tabGravity="center"
                app:tabMode="scrollable"
                app:tabIndicatorHeight="0dp"
                app:tabIndicatorGravity="center"
                app:tabIndicatorAnimationMode="elastic"
                app:tabIndicator="@drawable/shape_circle"
                app:tabIndicatorFullWidth="false"
                app:tabMinWidth="0dp"
                app:tabPaddingEnd="0dp"
                app:tabPaddingStart="0dp"
                app:tabUnboundedRipple="false" />

        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/separatorView"
                android:background="@drawable/background_round_corners_45dp"
                android:backgroundTint="?android:colorBackground"
                android:layout_marginTop="@dimen/grid_1"
                android:layout_marginHorizontal="@dimen/grid_6"
                app:layout_constraintTop_toBottomOf="@id/tabLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/viewPager"
                android:elevation="-1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
