<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_round_corners_top_15dp"
        android:backgroundTint="?colorOnPrimary">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/grid_4"
            android:id="@+id/appBarLayout"
            android:background="?colorOnPrimary"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/rv">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnBack"
                    android:background="?attr/actionBarItemBackground"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_cross"
                    android:padding="6dp"
                    android:layout_marginTop="@dimen/grid_3"
                    android:layout_marginStart="@dimen/backButtonMargin" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    style="@style/Style.QuizApp.Heading.TextAppearance"
                    android:id="@+id/pageTitle"
                    tools:text="@string/add"
                    app:layout_constraintTop_toTopOf="@+id/btnBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/btnBack" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/pageTitleSub"
                    android:text="@string/question"
                    android:layout_marginTop="@dimen/grid_1"
                    android:gravity="center"
                    android:textColor="?dominantTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/pageTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnQuestionType"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_radio_button"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="?android:colorBackground"
                    android:padding="@dimen/grid_2"
                    android:scaleX="0"
                    android:scaleY="0"
                    tools:scaleX="1"
                    tools:scaleY="1"
                    app:layout_constraintEnd_toEndOf="@+id/tvSave"
                    app:layout_constraintTop_toBottomOf="@+id/tvSave"
                    app:layout_constraintStart_toStartOf="@+id/tvSave" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/tvSave"
                    android:text="@string/done"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?colorPrimary"
                    android:layout_marginEnd="@dimen/grid_6"
                    app:layout_constraintTop_toTopOf="@+id/btnBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/btnBack" />


            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/btnBack"
                    android:maxHeight="300dp"
                    android:minHeight="200dp"
                    android:background="@drawable/background_round_corners_15dp"
                    android:backgroundTint="?android:colorBackground"
                    android:layout_marginHorizontal="@dimen/grid_4"
                    android:id="@+id/etQuestion"
                    android:hint="@string/clickToWriteYourQuestion"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/grid_3"
                    android:paddingTop="@dimen/grid_3"
                    android:paddingBottom="@dimen/grid_6"
                    android:layout_marginTop="@dimen/grid_8"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeStepGranularity="0.25sp" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:id="@+id/btnQuestionTypeNew"
                    android:text="@string/multipleChoice"
                    android:background="@drawable/background_round_corners_45dp"
                    android:backgroundTint="?colorPrimary"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/grid_2"
                    app:layout_constraintTop_toBottomOf="@id/etQuestion"
                    app:layout_constraintEnd_toStartOf="@id/btnAddQuestion"
                    android:layout_marginTop="@dimen/grid_4"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:id="@+id/btnAddQuestion"
                    android:text="@string/addAnswer"
                    android:background="@drawable/background_round_corners_45dp"
                    android:backgroundTint="?colorPrimary"
                android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/btnQuestionTypeNew"
                    app:layout_constraintWidth_percent="0.4"
                app:layout_constraintTop_toBottomOf="@id/etQuestion"
                app:layout_constraintEnd_toEndOf="parent"
                    android:paddingHorizontal="@dimen/grid_2"
                    android:layout_marginTop="@dimen/grid_4"
                android:drawablePadding="@dimen/grid_2"/>

<!--            <androidx.appcompat.widget.AppCompatImageView-->
<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    -->
<!--                    android:id="@+id/btnAddQuestion"-->
<!--                    android:background="@drawable/shape_circle"-->
<!--                    android:backgroundTint="?colorPrimary"-->
<!--                    app:layout_constraintTop_toBottomOf="@id/etQuestion"-->
<!--                    app:layout_constraintBottom_toBottomOf="@id/etQuestion"-->
<!--                    app:layout_constraintStart_toStartOf="@id/etQuestion"-->
<!--                    app:layout_constraintEnd_toEndOf="@id/etQuestion"-->
<!--                    app:srcCompat="@drawable/ic_add"-->
<!--                    app:tint="@color/white"-->
<!--                    android:padding="10dp" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/grid_1"
            android:id="@+id/rv"
            tools:listitem="@layout/rvi_answer_quiz"
            android:clipToPadding="false"
            android:paddingBottom="100dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>