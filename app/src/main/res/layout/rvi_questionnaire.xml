<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?colorOnPrimary"
        app:cardElevation="2dp"
        android:layout_marginTop="@dimen/grid_3"
        app:cardCornerRadius="@dimen/itemCardCornerRadius">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/topLayout"
                app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="37.5dp"
                    android:layout_height="37.5dp"
                    android:id="@+id/progressIndicator"
                    app:indicatorSize="37.5dp"
                    app:indicatorColor="@color/hfuLightGreen"
                    tools:indicatorColor="@color/hfuDarkerGreen"
                    app:trackColor="@color/unselectedColor"
                    app:trackThickness="2.5dp"
                    app:trackCornerRadius="50dp"
                    tools:visibility="visible"
                    tools:progress="40"
                    android:layout_marginStart="@dimen/grid_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/checkMarkIcon"
                    app:srcCompat="@drawable/ic_check"
                    android:tint="@color/hfuDarkerGreen"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintTop_toTopOf="@id/progressIndicator"
                    app:layout_constraintStart_toStartOf="@id/progressIndicator"
                    app:layout_constraintEnd_toEndOf="@id/progressIndicator"
                    app:layout_constraintBottom_toBottomOf="@id/progressIndicator" />

            <RelativeLayout
                    android:layout_width="0dp"
                    android:id="@+id/textLayout"
                    android:layout_marginHorizontal="@dimen/grid_2"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/progressIndicator"
                    app:layout_constraintTop_toTopOf="@+id/progressIndicator"
                    app:layout_constraintBottom_toBottomOf="@+id/progressIndicator"
                    app:layout_constraintEnd_toStartOf="@+id/btnSync">

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTitle"
                        android:gravity="center_vertical"
                        tools:text="Questionnaire Title"
                        android:textSize="17sp"
                        android:textColor="?dominantTextColor" />

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/tvDateAndQuestionAmount"
                        tools:text="Prof. Oliver Tamine  -  03.01.2022"
                        android:textSize="13sp"
                        android:layout_below="@id/tvTitle" />

            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/btnSync"
                    tools:tint="@color/green"
                    app:layout_constraintTop_toTopOf="@+id/textLayout"
                    app:srcCompat="@drawable/ic_cloud_done"
                    android:padding="4dp"
                    android:visibility="invisible"
                    android:layout_marginEnd="@dimen/grid_2"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="?android:colorBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/textLayout" />


            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/grid_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow_right"
                    app:tint="@color/hfuDarkerGreen"
                    android:padding="7.5dp"
                    android:elevation="1dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>