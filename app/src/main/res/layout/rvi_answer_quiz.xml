<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/defaultElevation"
        android:layout_marginHorizontal="@dimen/grid_2"
        android:layout_marginTop="@dimen/grid_3"
        app:cardCornerRadius="7.5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/defaultMinCardHeight"
            android:layout_margin="@dimen/grid_2">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/selectionButtonRing"
                app:srcCompat="@drawable/shape_ring"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/grid_1" />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/checkIcon"
                app:srcCompat="@drawable/ic_check"
                android:tint="?colorAccent"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/selectionButtonRing"
                app:layout_constraintStart_toStartOf="@id/selectionButtonRing"
                app:layout_constraintEnd_toEndOf="@id/selectionButtonRing"
                app:layout_constraintBottom_toBottomOf="@id/selectionButtonRing" />

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/answerText"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/selectionButtonRing"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Answer"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="@dimen/grid_2"
                app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>