<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background_round_corners_top_15dp"
        android:backgroundTint="?colorOnPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnBack"
                    android:background="?attr/actionBarItemBackground"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_arrow_back"
                    android:padding="6dp"
                    android:layout_marginTop="@dimen/grid_3"
                    android:layout_marginStart="@dimen/grid_1_5" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnMoreOptions"
                    android:src="@drawable/ic_more"
                    app:backgroundTint="?colorControlActivated"
                    android:padding="6dp"
                    android:elevation="10dp"
                    android:layout_marginEnd="@dimen/grid_1_5"
                    android:layout_marginTop="@dimen/grid_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/pageTitle"
                    android:text="@string/addQuestionnaire"
                    android:gravity="center"
                    android:maxLines="1"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeStepGranularity="0.25sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/btnBack"
                    app:layout_constraintStart_toEndOf="@+id/btnBack"
                    app:layout_constraintEnd_toStartOf="@+id/btnMoreOptions"
                    app:layout_constraintBottom_toBottomOf="@+id/btnBack" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="130dp"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/grid_4">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <include
                        android:id="@+id/infoCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/grid_4"
                        android:layout_marginTop="@dimen/grid_8"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        layout="@layout/fragment_add_edit_questionnaire_info_card" />


                <include
                        android:id="@+id/questionDistributionCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        layout="@layout/fragment_add_edit_questionnaire_distribution_card"
                        app:layout_constraintTop_toBottomOf="@id/infoCard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="@dimen/grid_4"
                        android:layout_marginTop="@dimen/grid_8" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
            layout="@layout/fragment_add_edit_questionnaire_bottom_sheet"
            android:id="@+id/bottomSheet"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            tools:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:id="@+id/btnSave"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="?colorPrimary"
            android:layout_gravity="bottom"
            android:text="@string/saveQuestionnaire"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/work_sans_medium"
            android:textColor="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>