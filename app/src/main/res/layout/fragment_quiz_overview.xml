<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="?colorOnPrimary"
        app:cardCornerRadius="@dimen/defaultBackgroundCardCornerRadius"
        app:cardElevation="0dp"
        android:padding="@dimen/grid_1">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/coordRoot">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/quizTopLayoutHeight"
                android:id="@+id/clHeader"
                android:elevation="@dimen/defaultElevation"
                android:background="?colorOnPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnBack"
                    android:background="?attr/actionBarItemBackground"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_arrow_back"
                    android:padding="6dp"
                    android:layout_marginTop="@dimen/grid_3"
                    android:layout_marginStart="@dimen/grid_1_5" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:id="@+id/tvTitle"
                    tools:text="Questionnaire Title"
                    android:gravity="center_horizontal"
                    app:autoSizeMaxTextSize="@dimen/maxHeaderTextSize"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeStepGranularity="0.25sp"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/grid_1"
                    app:layout_constraintTop_toTopOf="@+id/btnBack"
                    app:layout_constraintStart_toEndOf="@+id/btnBack"
                    app:layout_constraintEnd_toStartOf="@+id/btnMoreOptions" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:id="@+id/progress"
                    app:indicatorSize="135dp"
                    app:indicatorColor="?colorAccent"
                    app:trackColor="@color/unselectedColor"
                    app:trackThickness="10dp"
                    app:trackCornerRadius="5dp"
                    tools:progress="60"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:id="@+id/progressCorrect"
                    app:indicatorSize="135dp"
                    app:indicatorColor="@color/green"
                    app:trackColor="@android:color/transparent"
                    app:trackThickness="10dp"
                    app:layout_constraintTop_toTopOf="@id/progress"
                    app:layout_constraintStart_toStartOf="@id/progress"
                    app:layout_constraintEnd_toEndOf="@id/progress"
                    app:layout_constraintBottom_toBottomOf="@id/progress" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:id="@+id/progressIncorrect"
                    app:indicatorSize="135dp"
                    app:indicatorColor="@color/red"
                    app:trackColor="@android:color/transparent"
                    app:trackThickness="10dp"
                    android:scaleX="-1"
                    app:layout_constraintTop_toTopOf="@id/progress"
                    app:layout_constraintStart_toStartOf="@id/progress"
                    app:layout_constraintEnd_toEndOf="@id/progress"
                    app:layout_constraintBottom_toBottomOf="@id/progress" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/ivResultIcon"
                    android:visibility="gone"
                    tools:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/progress"
                    app:layout_constraintStart_toStartOf="@id/progress"
                    app:layout_constraintEnd_toEndOf="@id/progress"
                    app:layout_constraintBottom_toBottomOf="@id/progress"
                    app:srcCompat="@drawable/ic_check"
                    app:tint="@color/green"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnMoreOptions"
                    android:src="@drawable/ic_more"
                    app:backgroundTint="?colorControlActivated"
                    android:padding="6dp"
                    android:layout_marginEnd="@dimen/grid_1_5"
                    android:layout_marginTop="@dimen/grid_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvQuestionsAnswered"
                    tools:text="0 / 20"
                    android:gravity="center"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="25sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeStepGranularity="0.25sp"
                    app:layout_constraintTop_toTopOf="@id/progress"
                    app:layout_constraintStart_toStartOf="@id/progress"
                    app:layout_constraintEnd_toEndOf="@id/progress"
                    app:layout_constraintBottom_toBottomOf="@id/progress" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?colorOnPrimary"
                app:cardElevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="@dimen/grid_2"
                app:layout_constraintBottom_toBottomOf="@+id/clHeader"
                app:layout_constraintTop_toBottomOf="@+id/clHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_anchor="@id/clHeader"
                app:layout_anchorGravity="bottom">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="@dimen/grid_1"
                    android:layout_marginVertical="@dimen/grid_1">
                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tvAuthor"
                        tools:text="Sasi"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="9sp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="0.25sp"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/grid_1"
                        app:drawableTopCompat="@drawable/ic_person"
                        app:drawableTint="?colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintWidth_percent="0.32"
                        app:layout_constraintEnd_toStartOf="@+id/separatorOne"
                        app:layout_constraintTop_toTopOf="parent" />

                <View
                        android:layout_width="0.75dp"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvCourseOfStudies"
                        app:layout_constraintStart_toEndOf="@+id/tvAuthor"
                        android:background="@color/unselectedColor"
                        android:layout_marginVertical="@dimen/grid_1"
                        android:id="@+id/separatorOne" />

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tvCourseOfStudies"
                        tools:text="WIB"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="9sp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="0.25sp"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/grid_1"
                        app:drawableTopCompat="@drawable/ic_domain"
                        app:drawableTint="?colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/separatorOne"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintWidth_percent="0.32"
                        app:layout_constraintEnd_toStartOf="@+id/separatorTwo"
                        app:layout_constraintTop_toTopOf="parent" />

                <View
                        android:layout_width="0.75dp"
                        android:layout_height="match_parent"
                        android:id="@+id/separatorTwo"
                        app:layout_constraintStart_toEndOf="@+id/tvCourseOfStudies"
                        app:layout_constraintEnd_toStartOf="@+id/tvSubject"
                        android:layout_marginVertical="@dimen/grid_1"
                        android:background="@color/unselectedColor" />

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tvSubject"
                        tools:text="Promod"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="9sp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="0.25sp"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/grid_1"
                        app:drawableTopCompat="@drawable/ic_class"
                        app:drawableTint="?colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/separatorTwo"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintWidth_percent="0.32"
                        app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/quizTopLayoutHeight"
                android:id="@+id/rv"
                android:elevation="-1dp"
                android:layout_marginHorizontal="@dimen/grid_1"
                android:background="?android:colorBackground"
                android:layoutAnimation="@anim/recyclerview_layout_animation"
                tools:listitem="@layout/rvi_question_quiz"
                android:clipToPadding="false"
                android:paddingTop="30dp"
                android:paddingBottom="100dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/fabStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/grid_6"
                android:src="@drawable/ic_play_arrow"
                app:tint="@color/white"
                android:layout_gravity="bottom|end"
                app:backgroundTint="?colorPrimary" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.google.android.material.card.MaterialCardView>