<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/defaultBackgroundCardCornerRadius"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/topHeader"
                android:background="@color/white"
                android:elevation="@dimen/defaultElevation"
                android:paddingTop="@dimen/grid_3"
                app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="@string/questionnaires"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/maxHeaderTextSize"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/grid_1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/materialTextView" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/buttonMoreOptions"
                    android:background="?attr/actionBarItemBackground"
                    app:srcCompat="@drawable/ic_more"
                    android:padding="6dp"
                    android:layout_marginEnd="@dimen/grid_1_5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="@dimen/grid_4"
                    android:layout_marginBottom="@dimen/grid_3"
                    android:layout_marginTop="@dimen/grid_2"
                    android:id="@+id/tabLayout"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:backgroundTint="@android:color/transparent"
                    app:tabIndicatorHeight="0dp"
                    app:tabGravity="fill"
                    app:tabIndicatorAnimationMode="elastic"
                    app:tabIndicatorGravity="bottom"
                    app:tabIndicator="@drawable/tab_indicator"
                    app:tabIndicatorColor="@color/black"
                    app:tabTextAppearance="@style/Style.QuizApp.TabLayout.TextAppearance"
                    app:layout_constraintTop_toBottomOf="@+id/materialTextView"
                    tools:layout_editor_absoluteX="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/viewPager"
                android:elevation="-1dp"
                android:background="?android:colorBackground"
                android:layout_marginHorizontal="@dimen/grid_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topHeader" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
