<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="7.5dp"
        android:layout_margin="@dimen/grid_2">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:id="@+id/checkMarkIcon"
                app:srcCompat="@drawable/ic_course_of_studies"
                android:padding="7.5dp"
                android:layout_marginStart="@dimen/grid_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/tvAbbreviation"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@+id/checkMarkIcon"
                app:layout_constraintTop_toTopOf="@+id/checkMarkIcon"
                tools:text="WIB"
                android:textSize="16sp"
                android:fontFamily="@font/work_sans_medium"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/grid_2"
                app:layout_constraintBottom_toBottomOf="@+id/checkMarkIcon" />

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tvName"
                android:gravity="center_vertical"
                android:lines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tvAbbreviation"
                tools:text="Wirtschaftsinformatik"
                android:textSize="13sp"
                android:fontFamily="@font/work_sans_regular"
                android:layout_marginStart="@dimen/grid_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvAbbreviation"
                app:layout_constraintBottom_toBottomOf="@+id/tvAbbreviation" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>