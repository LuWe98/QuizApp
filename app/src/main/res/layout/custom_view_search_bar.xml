<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_round_corners_10dp"
        android:backgroundTint="?android:colorBackground"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btnSearch"
            android:background="?attr/actionBarItemBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_search"
            android:padding="7.5dp"
            android:layout_marginStart="@dimen/grid_1_5" />

    <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/etSearchQuery"
            android:hint="@string/searchForFaculties"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="@dimen/grid_1"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/btnSearch"
            app:layout_constraintBottom_toBottomOf="@+id/btnSearch"
            app:layout_constraintStart_toEndOf="@+id/btnSearch"
            app:layout_constraintEnd_toStartOf="@+id/btnFilter" />

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btnFilter"
            android:background="?attr/actionBarItemBackground"
            app:srcCompat="@drawable/ic_sort"
            android:padding="7.5dp"
            android:layout_marginEnd="@dimen/grid_1"
            app:layout_constraintTop_toTopOf="@id/etSearchQuery"
            app:layout_constraintBottom_toBottomOf="@id/etSearchQuery"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>