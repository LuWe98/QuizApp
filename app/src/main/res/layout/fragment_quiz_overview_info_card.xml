<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/generalInfoCard"
        app:cardCornerRadius="7.5dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/grid_1"
            android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/generalInfoHeader"
                android:background="@drawable/background_round_corners_15dp"
                android:backgroundTint="?android:colorBackground"
                app:layout_constraintBottom_toTopOf="@id/generalInfoContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="42.5dp"
                    android:layout_height="42.5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_outline_info"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="@color/transparent"
                    android:padding="10dp"
                    android:layout_marginStart="@dimen/grid_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/infoIcon" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/tvGeneralInfo"
                    android:text="General Info"
                    android:layout_marginStart="@dimen/grid_3"
                    android:textStyle="bold"
                    android:fontFamily="@font/work_sans_medium"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/infoIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/infoIcon"
                    app:layout_constraintTop_toTopOf="@+id/infoIcon"
                    app:layout_constraintEnd_toStartOf="@+id/btnInfoExpand" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="42.5dp"
                    android:layout_height="42.5dp"
                    app:srcCompat="@drawable/ic_arrow_down"
                    android:background="?actionBarItemBackground"
                    android:padding="10dp"
                    android:visibility="invisible"
                    android:layout_marginEnd="@dimen/grid_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/btnInfoExpand" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/generalInfoContainer"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/grid_2"
                app:layout_constraintStart_toStartOf="@id/generalInfoHeader"
                app:layout_constraintEnd_toEndOf="@id/generalInfoHeader"
                app:layout_constraintTop_toBottomOf="@id/generalInfoHeader">

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:id="@+id/authorCard"
                    app:cardCornerRadius="7.5dp"
                    app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="42.5dp"
                            android:layout_height="42.5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/ic_person"
                            android:background="@drawable/shape_circle"
                            android:backgroundTint="@color/transparent"
                            android:padding="12.5dp"
                            android:layout_marginStart="@dimen/grid_3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/authorIcon" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/rvAuthorTitle"
                            android:text="@string/author"
                            android:layout_marginStart="@dimen/grid_3"
                            android:fontFamily="@font/work_sans_medium"
                            android:textSize="13sp"
                            app:layout_constraintVertical_bias="0.25"
                            app:layout_constraintStart_toEndOf="@+id/authorIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/authorIcon" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvAuthor"
                            tools:text="Luca"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/grid_3"
                            android:textStyle="bold"
                            android:fontFamily="@font/work_sans_medium"
                            android:textSize="15sp"
                            app:layout_constraintStart_toEndOf="@+id/authorIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rvAuthorTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/authorIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/authorCard"
                    app:layout_constraintBottom_toTopOf="@id/facultyCard"
                    android:background="?android:colorBackground"
                    android:layout_marginHorizontal="@dimen/grid_8"
                    app:layout_constraintStart_toStartOf="@id/facultyCard"
                    app:layout_constraintEnd_toEndOf="@id/facultyCard" />


            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    android:id="@+id/facultyCard"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="@dimen/grid_2"
                    app:cardCornerRadius="7.5dp"
                    app:layout_constraintTop_toBottomOf="@+id/authorCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="42.5dp"
                            android:layout_height="42.5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/ic_faculty"
                            android:background="@drawable/shape_circle"
                            android:backgroundTint="@color/transparent"
                            android:padding="12.5dp"
                            android:layout_marginStart="@dimen/grid_3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/facultyIcon" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvFacultyTitle"
                            android:text="@string/faculty"
                            android:layout_marginStart="@dimen/grid_3"
                            android:fontFamily="@font/work_sans_medium"
                            android:textSize="13sp"
                            app:layout_constraintVertical_bias="0.25"
                            app:layout_constraintStart_toEndOf="@+id/facultyIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/facultyIcon" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvFaculty"
                            tools:text="Wirtschaftsinformatik"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/grid_3"
                            android:textStyle="bold"
                            android:fontFamily="@font/work_sans_medium"
                            android:textSize="15sp"
                            app:layout_constraintStart_toEndOf="@+id/facultyIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvFacultyTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/facultyIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/facultyCard"
                    app:layout_constraintBottom_toTopOf="@id/cosCard"
                    android:background="?android:colorBackground"
                    android:layout_marginHorizontal="@dimen/grid_8"
                    app:layout_constraintStart_toStartOf="@id/facultyCard"
                    app:layout_constraintEnd_toEndOf="@id/facultyCard" />

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    android:id="@+id/cosCard"
                    android:layout_marginTop="@dimen/grid_2"
                    app:cardCornerRadius="7.5dp"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/facultyCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="42.5dp"
                            android:layout_height="42.5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/ic_course_of_studies"
                            android:background="@drawable/shape_circle"
                            android:backgroundTint="@color/transparent"
                            android:padding="12.5dp"
                            android:layout_marginStart="@dimen/grid_3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/cosIcon" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvCosTitle"
                            android:text="@string/courseOfStudies"
                            android:layout_marginStart="@dimen/grid_3"
                            android:fontFamily="@font/work_sans_medium"
                            android:textSize="13sp"
                            app:layout_constraintVertical_bias="0.25"
                            app:layout_constraintStart_toEndOf="@+id/cosIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/cosIcon" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvCourseOfStudies"
                            tools:text="Wirtschaftsinformatik"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/grid_3"
                            android:textStyle="bold"
                            android:fontFamily="@font/work_sans_medium"
                            android:textSize="15sp"
                            app:layout_constraintStart_toEndOf="@+id/cosIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvCosTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/cosIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/cosCard"
                    app:layout_constraintBottom_toTopOf="@id/subjectCard"
                    android:background="?android:colorBackground"
                    android:layout_marginHorizontal="@dimen/grid_8"
                    app:layout_constraintStart_toStartOf="@id/facultyCard"
                    app:layout_constraintEnd_toEndOf="@id/facultyCard" />

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    android:id="@+id/subjectCard"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="@dimen/grid_2"
                    app:cardCornerRadius="7.5dp"
                    app:layout_constraintTop_toBottomOf="@+id/cosCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="42.5dp"
                            android:layout_height="42.5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/ic_subject"
                            android:background="@drawable/shape_circle"
                            android:backgroundTint="@color/transparent"
                            android:padding="12.5dp"
                            android:layout_marginStart="@dimen/grid_3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/subjectIcon" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvSubjectTitle"
                            android:text="@string/subject"
                            android:layout_marginStart="@dimen/grid_3"
                            android:fontFamily="@font/work_sans_medium"
                            android:textSize="13sp"
                            app:layout_constraintVertical_bias="0.25"
                            app:layout_constraintStart_toEndOf="@+id/subjectIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/subjectIcon" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvSubject"
                            tools:text="Promod"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/grid_3"
                            android:textStyle="bold"
                            android:fontFamily="@font/work_sans_medium"
                            android:textSize="15sp"
                            app:layout_constraintStart_toEndOf="@+id/subjectIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvSubjectTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/subjectIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/subjectCard"
                    app:layout_constraintBottom_toTopOf="@id/lastUpdatedCard"
                    android:background="?android:colorBackground"
                    android:layout_marginHorizontal="@dimen/grid_8"
                    app:layout_constraintStart_toStartOf="@id/facultyCard"
                    app:layout_constraintEnd_toEndOf="@id/facultyCard" />

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    android:id="@+id/lastUpdatedCard"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="@dimen/grid_2"
                    app:cardCornerRadius="7.5dp"
                    app:layout_constraintTop_toBottomOf="@+id/subjectCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="42.5dp"
                            android:layout_height="42.5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/ic_update"
                            android:background="@drawable/shape_circle"
                            android:backgroundTint="@color/transparent"
                            android:padding="12.5dp"
                            android:layout_marginStart="@dimen/grid_3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/lastUpdatedIcon" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvLastUpdatedTitle"
                            android:text="@string/lastUpdated"
                            android:layout_marginStart="@dimen/grid_3"
                            android:fontFamily="@font/work_sans_medium"
                            android:textSize="13sp"
                            app:layout_constraintVertical_bias="0.25"
                            app:layout_constraintStart_toEndOf="@+id/lastUpdatedIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/lastUpdatedIcon" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvLastUpdated"
                            tools:text="04.11.2021"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/grid_3"
                            android:textStyle="bold"
                            android:fontFamily="@font/work_sans_medium"
                            android:textSize="15sp"
                            app:layout_constraintStart_toEndOf="@+id/lastUpdatedIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvLastUpdatedTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/lastUpdatedIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
