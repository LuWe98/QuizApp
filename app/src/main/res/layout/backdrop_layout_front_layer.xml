<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_round_corners_top_10dp"
        android:elevation="1dp">

    <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="1dp"
            android:background="@drawable/background_round_corners_top_10dp"
            android:id="@+id/tabLayout">
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
            android:text="Downloaded"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Created"/>
    </com.google.android.material.tabs.TabLayout>

<!--    android:background="@drawable/background_round_corners_top_15dp"-->

    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FRONT LAYER"
            android:gravity="center_vertical"
            android:padding="@dimen/grid_4"
            android:textSize="20sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:id="@+id/testView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/rv"
            android:paddingHorizontal="@dimen/grid_4"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout"
            app:layout_constraintBottom_toBottomOf="parent" />

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrimView"
            android:visibility="gone"
            android:background="@drawable/background_round_corners_top_15dp"
            android:backgroundTint="@color/whiteAlpha"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
