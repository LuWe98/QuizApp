<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background_round_corners_top_15dp"
        android:backgroundTint="?colorOnPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appBarLayout"
                app:liftOnScroll="true"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/topLayout"
                    android:background="?colorOnPrimary"
                    android:elevation="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingBottom="@dimen/grid_3">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/btnBack"
                        android:background="?attr/actionBarItemBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/ic_arrow_back"
                        android:padding="6dp"
                        android:layout_marginVertical="@dimen/grid_3"
                        android:layout_marginStart="@dimen/grid_1_5" />

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/pageTitle"
                        android:text="@string/addFaculty"
                        android:gravity="center"
                        android:maxLines="1"
                        app:autoSizeMaxTextSize="19sp"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="0.25sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/work_sans_regular"
                        app:layout_constraintTop_toTopOf="@+id/btnBack"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/btnBack" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="130dp"
                android:clipToPadding="false"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:paddingTop="@dimen/grid_4">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/grid_6"
                        android:layout_marginTop="@dimen/grid_10"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <com.example.quizapp.view.customimplementations.ItemBottomTextDropDownLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/abbreviationCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:icon="@drawable/ic_title"
                            app:title="@string/abbreviation"
                            app:dropDownIcon="@drawable/ic_edit"
                            app:dropDownIconPadding="8.5dp"
                            tools:text="WI"
                            android:background="@drawable/background_round_corners_10dp"
                            android:backgroundTint="?android:colorBackground"
                            />

                    <com.example.quizapp.view.customimplementations.ItemBottomTextDropDownLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/abbreviationCard"
                            app:icon="@drawable/ic_faculty"
                            app:title="@string/name"
                            app:dropDownIcon="@drawable/ic_edit"
                            app:dropDownIconPadding="8.5dp"
                            tools:text="Wirtschaftsinformatik"
                            android:background="@drawable/background_round_corners_10dp"
                            android:backgroundTint="?android:colorBackground"
                            android:layout_marginTop="@dimen/grid_6" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/btnSave"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/background_round_corners_45dp"
            android:backgroundTint="?colorPrimary"
            android:layout_gravity="bottom"
            android:text="@string/save"
            android:layout_marginHorizontal="@dimen/grid_6"
            android:layout_marginBottom="@dimen/grid_4"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/work_sans_medium"
            android:textColor="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>