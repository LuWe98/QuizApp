<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/defaultBackgroundCardCornerRadius"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/quizTopLayoutHeight"
                android:id="@+id/topLayout"
                android:elevation="@dimen/defaultElevation"
                android:paddingHorizontal="@dimen/grid_2"
                android:paddingBottom="@dimen/grid_6"
                android:clipToPadding="false"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/buttonBack"
                    android:background="?attr/actionBarItemBackground"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_arrow_back"
                    android:padding="6dp"
                    android:layout_marginTop="@dimen/grid_3"
                    android:layout_marginStart="@dimen/grid_1_5" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/questionnaireTitle"
                    android:text="@string/editQuestion"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/maxHeaderTextSize"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/grid_1"
                    app:layout_constraintTop_toTopOf="@+id/buttonBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/isMultipleChoiceSwitch"
                    android:elevation="10dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:layout_marginEnd="@dimen/grid_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/questionnaireTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/questionnaireTitle" />

            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/questionEditText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/buttonBack"
                    android:layout_marginHorizontal="@dimen/grid_3"
                    android:hint="@string/typeYourQuestion"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/rv"
                tools:visibility="gone"
                tools:listitem="@layout/rvi_answer_edit"
                android:layoutAnimation="@anim/recyclerview_layout_animation"
                android:background="?android:colorBackground"
                android:layout_marginHorizontal="@dimen/grid_1"
                android:clipToPadding="false"
                android:paddingTop="@dimen/grid_2"
                android:paddingBottom="100dp"
                app:layout_constraintTop_toBottomOf="@id/topLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noDataLayout"
                app:layout_constraintVertical_bias="0.35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topLayout"
                app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/ic_question_mark"
                    android:id="@+id/noDataIcon"
                    android:padding="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/noAnswersYet"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/noDataIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAdd"
                android:src="@drawable/ic_add"
                app:backgroundTint="?colorAccent"
                app:tint="@color/white"
                app:fabSize="mini"
                android:layout_marginBottom="@dimen/grid_2"
                app:layout_constraintStart_toStartOf="@+id/fabConfirm"
                app:layout_constraintEnd_toEndOf="@+id/fabConfirm"
                app:layout_constraintBottom_toTopOf="@+id/fabConfirm" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/fabConfirm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/grid_6"
                android:src="@drawable/ic_check"
                app:tint="@color/white"
                android:layout_gravity="bottom|end"
                app:backgroundTint="?colorPrimary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>