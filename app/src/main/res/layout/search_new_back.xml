<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/defaultBackgroundCardCornerRadius"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btnBack"
                android:background="?attr/actionBarItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_arrow_back"
                android:padding="6dp"
                android:layout_marginVertical="@dimen/grid_3"
                android:layout_marginStart="@dimen/grid_1_5" />

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/pageTitle"
                android:text="@string/search"
                android:gravity="center"
                android:maxLines="1"
                app:autoSizeMaxTextSize="19sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="0.25sp"
                android:textStyle="bold"
                android:fontFamily="@font/work_sans_regular"
                app:layout_constraintTop_toTopOf="@+id/btnBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/btnBack" />


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clSearchBar"
                android:background="@drawable/background_round_corners_10dp"
                android:backgroundTint="?android:colorBackground"
                android:layout_marginHorizontal="@dimen/grid_4"
                android:layout_marginTop="@dimen/grid_4"
                app:layout_constraintTop_toBottomOf="@+id/btnBack">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnSearch"
                    android:background="?attr/actionBarItemBackground"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/ic_search"
                    android:padding="7.5dp"
                    android:layout_marginStart="@dimen/grid_1_5" />

            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:id="@+id/etSearchQuery"
                    android:hint="@string/searchForCourseOfStudies"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="@dimen/grid_1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/btnSearch"
                    app:layout_constraintBottom_toBottomOf="@+id/btnSearch"
                    app:layout_constraintStart_toEndOf="@+id/btnSearch"
                    app:layout_constraintEnd_toStartOf="@+id/btnFilter" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnFilter"
                    android:background="?attr/actionBarItemBackground"
                    app:srcCompat="@drawable/ic_sort"
                    android:padding="7.5dp"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:layout_constraintTop_toTopOf="@id/etSearchQuery"
                    app:layout_constraintBottom_toBottomOf="@id/etSearchQuery"
                    app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/grid_2"
                android:paddingBottom="100dp"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/clSearchBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/orderByCard"
                        android:background="@drawable/background_round_corners_7_5dp"
                        android:backgroundTint="?android:colorBackground"
                        android:paddingVertical="@dimen/grid_3"
                        android:layout_marginHorizontal="@dimen/grid_6"
                        android:layout_marginTop="@dimen/grid_4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/orderFilterHeader"
                            android:text="Sort by"
                            android:background="@drawable/background_round_corners_10dp"
                            android:backgroundTint="@color/transparent"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/grid_4"
                            android:layout_marginHorizontal="@dimen/grid_2"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/work_sans_medium"
                            app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioGroup"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/orderFilterHeader">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/grid_4"
                                android:id="@+id/titleRadio"
                                android:text="Title" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/grid_4"
                                android:id="@+id/authorNameRadio"
                                android:text="Authorname" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/grid_4"
                                android:id="@+id/lastUpdatedRadio"
                                android:text="Last updated" />
                    </RadioGroup>


                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/ivSortBy"
                            app:tint="?colorPrimary"
                            app:srcCompat="@drawable/ic_title"
                            android:padding="5dp"
                            android:elevation="@dimen/grid_2"
                            android:layout_marginStart="@dimen/grid_2"
                            app:layout_constraintStart_toStartOf="@id/tvSortBy"
                            app:layout_constraintTop_toTopOf="@id/tvSortBy"
                            app:layout_constraintBottom_toBottomOf="@id/tvSortBy" />

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/ripple_round_corners_10_dp"
                            android:text="@string/title"
                            android:id="@+id/tvSortBy"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?colorPrimary"
                            android:fontFamily="@font/work_sans_regular"
                            android:paddingHorizontal="@dimen/grid_12"
                            android:layout_marginHorizontal="@dimen/grid_4"
                            android:layout_marginTop="@dimen/grid_2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/orderFilterHeader" />

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:tint="?colorPrimary"
                            app:srcCompat="@drawable/ic_arrow_down"
                            android:padding="5dp"
                            android:layout_marginEnd="@dimen/grid_2"
                            app:layout_constraintEnd_toEndOf="@id/tvSortBy"
                            app:layout_constraintTop_toTopOf="@id/tvSortBy"
                            app:layout_constraintBottom_toBottomOf="@id/tvSortBy" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/facultyCard"
                        android:background="@drawable/background_round_corners_7_5dp"
                        android:backgroundTint="?android:colorBackground"
                        android:paddingVertical="@dimen/grid_3"
                        android:layout_marginTop="@dimen/grid_4"
                        android:layout_marginHorizontal="@dimen/grid_6"
                        app:layout_constraintTop_toBottomOf="@id/orderByCard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/facultyFilterHeader"
                            android:text="Filter faculties"
                            android:background="@drawable/background_round_corners_10dp"
                            android:backgroundTint="@color/transparent"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/grid_4"
                            android:layout_marginHorizontal="@dimen/grid_2"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/work_sans_medium"
                            app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.chip.ChipGroup
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:id="@+id/chipGroupFaculty"
                            app:layout_constraintTop_toBottomOf="@id/facultyFilterHeader"
                            android:layout_marginTop="@dimen/grid_1"
                            android:layout_marginHorizontal="@dimen/grid_3"
                            app:layout_constraintStart_toStartOf="@id/facultyFilterHeader"
                            app:layout_constraintEnd_toEndOf="@id/facultyFilterHeader">

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/addChipFaculty"
                                app:chipMinHeight="30dp"
                                style="@style/Style.QuizApp.AddChip"
                                android:text="@string/add" />

                    </com.google.android.material.chip.ChipGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cosCard"
                        android:background="@drawable/background_round_corners_7_5dp"
                        android:backgroundTint="?android:colorBackground"
                        android:layout_marginHorizontal="@dimen/grid_6"
                        android:paddingVertical="@dimen/grid_3"
                        android:layout_marginTop="@dimen/grid_4"
                        app:layout_constraintTop_toBottomOf="@id/facultyCard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/cosFilterHeader"
                            android:text="Filter courses of studies"
                            android:background="@drawable/background_round_corners_10dp"
                            android:backgroundTint="@color/transparent"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/grid_4"
                            android:layout_marginHorizontal="@dimen/grid_2"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/work_sans_medium"
                            app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.chip.ChipGroup
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/chipGroupCos"
                            app:layout_constraintTop_toBottomOf="@id/cosFilterHeader"
                            android:layout_marginTop="@dimen/grid_1"
                            android:animateLayoutChanges="true"
                            android:layout_marginHorizontal="@dimen/grid_3"
                            app:layout_constraintStart_toStartOf="@id/cosFilterHeader"
                            app:layout_constraintEnd_toEndOf="@id/cosFilterHeader">

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/addChipCos"
                                style="@style/Style.QuizApp.AddChip"
                                android:text="@string/add" />

                    </com.google.android.material.chip.ChipGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/personCard"
                        android:background="@drawable/background_round_corners_7_5dp"
                        android:backgroundTint="?android:colorBackground"
                        android:layout_marginHorizontal="@dimen/grid_6"
                        android:paddingVertical="@dimen/grid_3"
                        android:layout_marginTop="@dimen/grid_4"
                        app:layout_constraintTop_toBottomOf="@id/cosCard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/authorFilterHeader"
                            android:text="Filter authors"
                            android:background="@drawable/background_round_corners_10dp"
                            android:backgroundTint="@color/transparent"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/grid_4"
                            android:layout_marginHorizontal="@dimen/grid_2"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/work_sans_medium"
                            app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.chip.ChipGroup
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/chipGroupAuthor"
                            android:animateLayoutChanges="true"
                            app:layout_constraintTop_toBottomOf="@id/authorFilterHeader"
                            android:layout_marginTop="@dimen/grid_1"
                            android:layout_marginHorizontal="@dimen/grid_3"
                            app:layout_constraintStart_toStartOf="@id/authorFilterHeader"
                            app:layout_constraintEnd_toEndOf="@id/authorFilterHeader">

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/addChipAuthor"
                                style="@style/Style.QuizApp.AddChip"
                                android:text="@string/add" />

                    </com.google.android.material.chip.ChipGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>