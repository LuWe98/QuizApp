<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/background_round_corners_top_15dp"
        android:backgroundTint="?colorOnPrimary">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btnBack"
            android:background="?attr/actionBarItemBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_arrow_back"
            android:padding="6dp"
            android:layout_marginTop="@dimen/grid_3"
            android:layout_marginStart="@dimen/grid_1_5" />

    <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tvTitle"
            android:text="@string/manageFaculties"
            android:gravity="center"
            android:textSize="@dimen/maxHeaderTextSize"
            android:maxLines="1"
            app:autoSizeMaxTextSize="19sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="0.25sp"
            android:textStyle="bold"
            android:fontFamily="@font/work_sans_regular"
            android:layout_marginHorizontal="50dp"
            android:lines="1"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clSearchBar"
            android:elevation="2dp"
            android:background="@drawable/background_round_corners_10dp"
            android:backgroundTint="?android:colorBackground"
            android:layout_marginHorizontal="@dimen/grid_4"
            android:layout_marginTop="@dimen/grid_4"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btnSearch"
                android:background="?attr/actionBarItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_search"
                android:padding="7.5dp"
                android:layout_marginStart="@dimen/grid_1_5" />

        <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/etSearchQuery"
                android:hint="@string/searchForFaculties"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="@dimen/grid_1"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/btnSearch"
                app:layout_constraintBottom_toBottomOf="@+id/btnSearch"
                app:layout_constraintStart_toEndOf="@+id/btnSearch"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/rv"
            android:paddingHorizontal="@dimen/grid_2"
            android:paddingTop="@dimen/grid_2"
            android:clipToPadding="false"
            tools:listitem="@layout/rvi_faculty"
            app:layout_constraintTop_toBottomOf="@id/clSearchBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fabAdd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/grid_8"
            android:src="@drawable/ic_add"
            app:tint="@color/white"
            app:backgroundTint="?colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>