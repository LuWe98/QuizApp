<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="?android:colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topLayout"
            android:background="?colorOnPrimary"
            android:elevation="2dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/grid_4"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btnBack"
                android:background="?attr/actionBarItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_arrow_back"
                android:padding="6dp"
                android:layout_marginTop="@dimen/grid_3"
                android:layout_marginStart="@dimen/backButtonMargin" />

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tvTitle"
                style="@style/Style.QuizApp.Heading.TextAppearance"
                android:text="@string/manageFaculties"
                android:textSize="@dimen/maxHeaderTextSize"
                android:layout_marginHorizontal="50dp"
                app:layout_constraintTop_toTopOf="@+id/btnBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/btnBack" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/searchBarHeight"
                android:id="@+id/clSearchBar"
                android:elevation="@dimen/searchBarElevation"
                android:background="@drawable/search_bar_background"
                android:backgroundTint="?android:colorBackground"
                android:layout_marginHorizontal="@dimen/grid_4"
                android:layout_marginTop="@dimen/grid_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintEnd_toStartOf="@+id/btnAdd">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnSearch"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/ic_search"
                    android:padding="7.5dp"
                    android:layout_marginStart="@dimen/grid_3" />

            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/etSearchQuery"
                    android:hint="@string/searchForFaculties"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="@dimen/grid_1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/btnSearch"
                    app:layout_constraintBottom_toBottomOf="@+id/btnSearch"
                    app:layout_constraintStart_toEndOf="@+id/btnSearch"
                    app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btnAdd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/clSearchBar"
                app:layout_constraintBottom_toBottomOf="@id/clSearchBar"
                app:srcCompat="@drawable/ic_add"
                app:tint="@color/white"
                android:layout_marginEnd="@dimen/grid_4"
                android:padding="10dp"
                android:background="@drawable/ripple_round_corners_10_dp"
                android:backgroundTint="?colorPrimary"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/rv"
            android:paddingHorizontal="@dimen/grid_4"
            android:paddingTop="@dimen/grid_2"
            android:paddingBottom="150dp"
            android:clipToPadding="false"
            tools:listitem="@layout/rvi_faculty"
            app:layout_constraintTop_toBottomOf="@id/topLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.example.quizapp.view.customimplementations.DataAvailabilityLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dataAvailability"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintVertical_bias="0.25"
            app:availabilityIcon="@drawable/ic_search_no_results"
            app:availabilityTitle="@string/noFacultyResultsFoundTitle"
            app:availabilityText="@string/noFacultyResultsFoundText"
            app:layout_constraintTop_toBottomOf="@id/topLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>