<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <com.example.quizapp.view.customimplementations.ItemBottomTextDropDownLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:icon="@drawable/ic_title"
            app:title="@string/title"
            app:dropDownIcon="@drawable/ic_edit"
            app:dropDownIconPadding="8.5dp"
            tools:text="Questionnaire Title"
            android:background="@drawable/background_round_corners_10dp"
            android:backgroundTint="?android:colorBackground"
            />

    <com.example.quizapp.view.customimplementations.ItemBottomTextDropDownLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cosDropDown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleCard"
            app:icon="@drawable/ic_course_of_studies"
            app:title="@string/courseOfStudies"
            app:dropDownIcon="@drawable/ic_arrow_down"
            tools:text="WIB, WNB"
            android:layout_marginTop="@dimen/grid_6"
            android:background="@drawable/background_round_corners_10dp"
            android:backgroundTint="?android:colorBackground"/>

    <com.example.quizapp.view.customimplementations.ItemBottomTextDropDownLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subjectCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cosDropDown"
            app:icon="@drawable/ic_subject"
            app:title="@string/subject"
            app:dropDownIcon="@drawable/ic_edit"
            app:dropDownIconPadding="8.5dp"
            tools:text="Promod"
            android:layout_marginTop="@dimen/grid_6"
            android:background="@drawable/background_round_corners_10dp"
            android:backgroundTint="?android:colorBackground"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/publishLayout"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/subjectCard"
            android:layout_marginTop="@dimen/grid_6"
            android:background="@drawable/ripple_round_corners_15_dp"
            android:backgroundTint="?android:colorBackground">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_publish"
                android:layout_marginStart="@dimen/grid_1"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/publishIcon" />

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/publishText"
                android:text="@string/shouldPublishQuestionnaire"
                android:layout_marginStart="@dimen/grid_2"
                android:textColor="?defaultTextColor"
                android:textStyle="bold"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="center_vertical"
                app:autoSizeMaxTextSize="15.5sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="0.25sp"
                android:lines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/publishIcon"
                app:layout_constraintEnd_toStartOf="@+id/publishCheckBox" />

        <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/publishCheckBox"
                android:clickable="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleY="0.75"
                android:scaleX="0.75"
                android:layout_marginEnd="@dimen/grid_1"
                app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>