<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.example.quizapp.view.customimplementations.ItemBottomTextDropDownLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:icon="@drawable/ic_title"
            app:title="@string/title"
            app:dropDownIcon="@drawable/ic_arrow_down"
            tools:text="Questionnaire Title"
            android:background="@drawable/ripple_round_corners_10_dp"
            android:backgroundTint="?android:colorBackground" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_marginTop="@dimen/grid_6"
            android:background="@drawable/background_round_corners_10dp"
            android:backgroundTint="?android:colorBackground"
            app:layout_constraintTop_toBottomOf="@+id/titleCard"
            android:id="@+id/constraintLayout">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_course_of_studies"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/cosIcon" />

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/cosText"
                android:text="@string/courseOfStudies"
                android:layout_marginStart="@dimen/grid_2"
                android:textColor="?defaultTextColor"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintBottom_toBottomOf="@+id/cosIcon"
                app:layout_constraintTop_toTopOf="@+id/cosIcon"
                app:layout_constraintStart_toEndOf="@+id/cosIcon"
                app:layout_constraintEnd_toStartOf="@+id/addLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/addLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/cosTextAdd"
                    android:text="@string/add"
                    android:layout_marginEnd="@dimen/grid_6"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    app:autoSizeMaxTextSize="15.5sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    android:lines="1"
                    app:autoSizeStepGranularity="0.25sp"
                    android:layout_centerVertical="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="@dimen/grid_1"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="@id/cosTextAdd"
                    app:layout_constraintBottom_toBottomOf="@id/cosTextAdd"
                    app:layout_constraintStart_toEndOf="@id/cosTextAdd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_arrow_right"
                    app:tint="?colorPrimary" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/chipGroupCos"
                android:visibility="gone"
                tools:visibility="visible"
                android:animateLayoutChanges="true"
                android:paddingVertical="@dimen/grid_2"
                android:layout_marginHorizontal="18dp"
                app:layout_constraintTop_toBottomOf="@+id/cosIcon"
                app:layout_constraintStart_toStartOf="@+id/cosIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addChipCos"
                    android:visibility="gone"
                    style="@style/Style.QuizApp.AddChip"
                    android:text="@string/add" />

        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.quizapp.view.customimplementations.ItemBottomTextDropDownLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subjectCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:icon="@drawable/ic_subject"
            app:title="@string/subject"
            app:dropDownIcon="@drawable/ic_arrow_down"
            tools:text="Promod"
            android:layout_marginTop="@dimen/grid_6"
            android:background="@drawable/ripple_round_corners_10_dp"
            android:backgroundTint="?android:colorBackground" />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/publishLayout"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/subjectCard"
            android:layout_marginTop="@dimen/grid_6"
            android:background="@drawable/ripple_round_corners_10_dp"
            android:backgroundTint="?android:colorBackground">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_publish"
                android:layout_marginStart="@dimen/grid_1"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/publishIcon" />

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/publishText"
                android:text="@string/shouldPublishQuestionnaire"
                android:layout_marginStart="@dimen/grid_2"
                android:textColor="?defaultTextColor"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/publishIcon"
                app:layout_constraintEnd_toStartOf="@+id/checkBox" />


        <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:id="@+id/checkBox"
                android:clickable="false"
                android:scaleX="0.75"
                android:minWidth="0dp"
                android:scaleY="0.75"
                app:buttonTint="?colorPrimary"
                android:layout_marginEnd="@dimen/grid_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/grid_6"
            android:visibility="gone"
            android:id="@+id/questionCard"
            android:background="@drawable/ripple_round_corners_15_dp"
            android:backgroundTint="@color/newTestColor"
            app:layout_constraintTop_toBottomOf="@+id/publishLayout">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnCollapse"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_question_mark"
                android:padding="7.5dp"
                app:tint="?invertedDominantTextColor"
                android:layout_marginStart="@dimen/grid_2"
                app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/questions"
                android:id="@+id/tvQuestionsText"
                android:layout_marginStart="@dimen/grid_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="16sp"
                android:textColor="?invertedDominantTextColor"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/btnCollapse" />

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20"
                android:id="@+id/tvQuestionsAmount"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="16sp"
                android:textColor="?invertedDefaultTextColor"
                android:layout_marginStart="@dimen/grid_4"
                app:layout_constraintStart_toEndOf="@+id/tvQuestionsText" />

        <!--            <com.google.android.material.textview.MaterialTextView-->
        <!--                    android:layout_width="wrap_content"-->
        <!--                    android:layout_height="30dp"-->
        <!--                    android:text="@string/add"-->
        <!--                    android:drawableStart="@drawable/ic_add"-->
        <!--                    android:background="@drawable/background_round_corners_45dp"-->
        <!--                    android:paddingStart="@dimen/grid_1"-->
        <!--                    android:paddingEnd="@dimen/grid_3"-->
        <!--                    android:drawablePadding="@dimen/grid_2"-->
        <!--                    android:layout_marginEnd="@dimen/grid_4"-->
        <!--                    android:gravity="center"-->
        <!--                    app:layout_constraintTop_toTopOf="@+id/sheetHeader"-->
        <!--                    app:layout_constraintBottom_toBottomOf="@+id/sheetHeader"-->
        <!--                    app:layout_constraintEnd_toEndOf="parent" />-->

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnAdd"
                android:elevation="2dp"
                android:background="@drawable/shape_circle"
                android:backgroundTint="?invertedDominantTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_add"
                app:tint="@color/black"
                android:padding="10dp"
                android:layout_marginEnd="@dimen/grid_4"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>