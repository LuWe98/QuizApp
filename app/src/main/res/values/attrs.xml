<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="dominantTextColor" format="color"/>
    <attr name="defaultTextColor" format="color"/>
    <attr name="invertedDominantTextColor" format="color"/>
    <attr name="invertedDefaultTextColor" format="color"/>
    <attr name="headingTextColor" format="color"/>

    <declare-styleable name="BackdropLayout">
        <attr name="frontLayerTopMargin" format="dimension"/>
        <attr name="frontLayerExpandedOffset" format="dimension"/>
        <attr name="frontLayerCollapsedMinHeight" format="dimension"/>
        <attr name="frontLayerCollapsedOffset" format="dimension"/>
        <attr name="frontLayerCollapsedScale" format="float"/>
        <attr name="frontLayerAnimationDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SettingsItemActionLayout">
        <attr name="title" format="string"/>
        <attr name="titleColor" format="color"/>
        <attr name="icon" format="reference"/>
        <attr name="iconPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SettingsItemTextLayout" parent="SettingsItemLayout">
        <attr name="title"/>
        <attr name="titleColor"/>
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="icon"/>
        <attr name="iconTint" format="color"/>
        <attr name="iconPadding"/>
    </declare-styleable>

    <declare-styleable name="SettingsItemDropDownLayout" parent="SettingsItemTextLayout">
        <attr name="title"/>
        <attr name="titleColor"/>
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="icon"/>
        <attr name="iconTint"/>
        <attr name="iconPadding"/>
        <attr name="dropDownIcon" format="reference"/>
        <attr name="dropDownIconTint" format="color"/>
        <attr name="dropDownIconPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SettingsItemBottomTextDropDownLayout" parent="SettingsItemTextLayout">
        <attr name="title"/>
        <attr name="titleColor"/>
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="icon"/>
        <attr name="iconTint"/>
        <attr name="iconPadding"/>
        <attr name="dropDownIcon"/>
        <attr name="dropDownIconTint"/>
        <attr name="dropDownIconPadding"/>
    </declare-styleable>

    <declare-styleable name="ItemBottomTextDropDownLayout" parent="SettingsItemBottomTextDropDownLayout">
        <attr name="title"/>
        <attr name="titleColor"/>
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="icon"/>
        <attr name="iconTint"/>
        <attr name="iconPadding"/>
        <attr name="dropDownIcon"/>
        <attr name="dropDownIconTint"/>
        <attr name="dropDownIconPadding"/>
        <attr name="maxLines" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomTextInput">
        <attr name="titleText" format="string"/>
        <attr name="hintText" format="string"/>
    </declare-styleable>

    <declare-styleable name="DataAvailabilityLayout">
        <attr name="availabilityIcon" format="reference"/>
        <attr name="availabilityTitle" format="reference"/>
        <attr name="availabilityText" format="reference"/>
    </declare-styleable>
</resources>