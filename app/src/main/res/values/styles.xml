<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Style.ModalBottomSheet.Transparent" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="Style.QuizApp.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="tabTextColor">@color/tab_layout_color_selector</item>
    </style>


    <style name="Style.QuizApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:background">@drawable/background_round_corners_10dp</item>
        <item name="background">@drawable/background_round_corners_10dp</item>
        <item name="elevation">@dimen/defaultElevation</item>
        <!--        <item name="materialThemeOverlay">@style/Style.QuizApp.TextInputEditText.ThemeOverlay</item>-->
    </style>

    <style name="Style.QuizApp.TextInputEditText.ThemeOverlay">
        <item name="editTextStyle">@style/Style.QuizApp.TextInputEditText</item>
    </style>

    <style name="Style.QuizApp.TextInputEditText" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="Style.QuizApp.FilterChipOld" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textSize">12sp</item>
        <item name="chipIconSize">15dp</item>
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="chipMinTouchTargetSize">46dp</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Style.QuizApp.DialogFragment.Animation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_fragment_appear</item>
        <item name="android:windowExitAnimation">@anim/dialog_fragment_hide</item>
    </style>

    <style name="Style.QuizApp.MaterialCardView.RoundCornersTop" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/Style.QuizApp.MaterialCardView.RoundCornersTop.ShapeAppearanceOverlay</item>
    </style>

    <style name="Style.QuizApp.MaterialCardView.RoundCornersTop.ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="android:padding">0dp</item>
    </style>



    <style name="Style.QuizApp.AddChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">?colorPrimary</item>
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="chipIcon">@drawable/ic_add</item>
        <item name="chipIconSize">20dp</item>
        <item name="chipIconTint">?colorPrimary</item>
        <item name="chipStartPadding">@dimen/grid_0_5</item>
        <item name="chipEndPadding">@dimen/grid_1</item>
        <item name="chipMinHeight">30dp</item>
        <item name="chipMinTouchTargetSize">35dp</item>
    </style>

    <style name="Style.QuizApp.EntryChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/transparent</item>
        <item name="chipBackgroundColor">?colorAccent</item>
        <item name="chipIconTint">?colorPrimary</item>
        <item name="chipStartPadding">@dimen/grid_0_5</item>
        <item name="chipEndPadding">@dimen/grid_1</item>
        <item name="chipMinHeight">30dp</item>
        <item name="chipMinTouchTargetSize">35dp</item>
        <item name="closeIconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="Style.QuizApp.FilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">?colorOnPrimary</item>
        <item name="chipIconTint">?colorPrimary</item>
        <item name="chipStartPadding">@dimen/grid_0_5</item>
        <item name="chipEndPadding">@dimen/grid_1</item>
        <item name="chipMinHeight">30dp</item>
        <item name="chipMinTouchTargetSize">35dp</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIcon">@drawable/ic_check_circle</item>
        <item name="chipIconSize">20dp</item>
        <item name="checkedIconTint">?colorPrimary</item>
    </style>


    <style name="Style.QuizApp.Heading.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?headingTextColor</item>
        <item name="autoSizeMaxTextSize">19sp</item>
        <item name="autoSizeMinTextSize">17sp</item>
        <item name="autoSizeStepGranularity">0.5dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
    </style>
</resources>