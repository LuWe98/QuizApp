<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Style.ModalBottomSheet.Transparent" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="Style.QuizApp.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="tabTextColor">@color/tab_layout_color_selector</item>
    </style>


    <style name="Style.QuizApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:background">@drawable/background_round_corners_10dp</item>
        <item name="background">@drawable/background_round_corners_10dp</item>
        <item name="elevation">@dimen/defaultElevation</item>
        <!--        <item name="materialThemeOverlay">@style/Style.QuizApp.TextInputEditText.ThemeOverlay</item>-->
    </style>

    <style name="Style.QuizApp.TextInputEditText.ThemeOverlay">
        <item name="editTextStyle">@style/Style.QuizApp.TextInputEditText</item>
    </style>

    <style name="Style.QuizApp.TextInputEditText" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="Style.QuizApp.FilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textSize">12sp</item>
        <item name="chipIconSize">15dp</item>
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="chipMinTouchTargetSize">46dp</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Style.QuizApp.DialogFragment.Animation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_fragment_appear</item>
        <item name="android:windowExitAnimation">@anim/dialog_fragment_hide</item>
    </style>


    <style name="Style.QuizApp.MaterialCardView.RoundCornersTop" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/Style.QuizApp.MaterialCardView.RoundCornersTop.ShapeAppearanceOverlay</item>
    </style>

    <style name="Style.QuizApp.MaterialCardView.RoundCornersTop.ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>