<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash Theme -->
    <style name="Theme.QuizApp.Splash" parent="Theme.QuizApp.Splash.Light"/>
    <!-- Base theme -->
    <style name="Theme.QuizApp" parent="Theme.QuizApp.Light"/>
    <!-- Base BottomSheetDialogTheme -->
    <style name="Theme.QuizApp.BottomSheetDialog" parent="Theme.QuizApp.BottomSheetDialog.Light"/>
    <!-- Base DialogFragmentTheme -->
    <style name="Theme.QuizApp.DialogFragment" parent="Theme.QuizApp.DialogFragment.Light"/>
    <!-- Base DialogFragmentLoadingTheme -->
    <style name="Theme.QuizApp.DialogFragment.Loading" parent="Theme.QuizApp.DialogFragment.Loading.Light"/>



    <!-- Light Splash Theme -->
    <style name="Theme.QuizApp.Splash.Light" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/hfuDarkGreen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_hfu_logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.QuizApp</item>
    </style>



    <!-- Light Base Theme -->
    <style name="Theme.QuizApp.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryVariant">@color/lightColorPrimaryVariant</item>

        <item name="colorAccent">@color/lightColorAccent</item>

        <item name="colorOnPrimary">@color/lightColorOnPrimary</item>
        <item name="android:colorBackground">@color/lightBackgroundColor</item>
        <item name="colorOnBackground">@color/lightBackgroundColor</item>


        <item name="colorSecondary">@color/lightColorSecondary</item>
        <item name="colorSecondaryVariant">@color/lightColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/lightColorOnSecondary</item>

        <!--<item name="colorOnSurface">@color/white</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>


        <item name="android:windowLightStatusBar">true</item>
        <item name="mainTransparencyColor">@color/whiteAlpha</item>

        <item name="colorControlActivated">@color/lightColorControlActivated</item>
        <item name="colorControlNormal">@color/lightColorControlNormal</item>

        <!-- Text Colors -->
        <item name="defaultTextColor">@color/lightDefaultTextColor</item>
        <item name="dominantTextColor">@color/lightDominantTextColor</item>
        <item name="invertedDefaultTextColor">@color/darkDefaultTextColor</item>
        <item name="invertedDominantTextColor">@color/darkDominantTextColor</item>
        <item name="headingTextColor">@color/black</item>

        <!-- Customization -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/Theme.QuizApp.BottomSheetDialog</item>
        <item name="android:dialogTheme">@style/Theme.QuizApp.DialogFragment</item>
        <item name="dialogTheme">@style/Theme.QuizApp.DialogFragment</item>
        <!-- <item name="textInputStyle">@style/Style.QuizApp.TextInputLayout</item>-->
    </style>



